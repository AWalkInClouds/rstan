citHeader("To cite Stan in publications use:")

citEntry(entry = "Misc", 
         title = "Stan: A C++ Library for Probability and Sampling, Version 2.13.1",
         author = person(given = "Stan Development Team"),
         year = "2016",
         url = "http://mc-stan.org/",
         textVersion =
           paste("Stan Development Team (2016).",
                 title = "Stan: A C++ Library for Probability and Sampling, Version 2.13.1.",
                 "URL http://mc-stan.org/.") 
)
  
citEntry(entry = "Manual", 
         title = "Stan Modeling Language User's Guide and Reference Manual, Version 2.13.1",
         author = person(given = "Stan Development Team"),
         year = "2016", 
         url = "http://mc-stan.org/",
         textVersion  =
           paste("Stan Development Team (2016).", 
                 "Stan Modeling Language User's Guide and Reference Manual, Version 2.13.1.",
                 "URL http://mc-stan.org/.") 
)

citEntry(entry = "Article", 
         title = "The No-U-Turn Sampler: Adaptively Setting Path Lengths in Hamiltonian Monte Carlo",
         author = c(person(given = "Matthew  D.", family = "Hoffman"), person(given = "Andrew", family = "Gelman")),
         year = "2014",
         journal = "Journal of Machine Learning Research",
         textVersion = 
           paste("Hoffman, Matthew D. and Andrew Gelman. In press.",
                 "The No-U-Turn Sampler: Adaptively Setting Path Lengths in Hamiltonian Monte Carlo.",
                 "Journal of Machine Learning Research.")
) 

bibentry(bibtype = "Article",
  title        = "{Stan}: A Probabilistic Programming Language",

  author       = c(person(given = "Bob",
                          family = "Carpenter",
                          email = "carp@alias-i.com"),
                   person(given = "Andrew",
                          family = "Gelman"),
                   person(given = c("Matthew", "D."),
                          family = "Hoffman"),
                   person(given = "Daniel",
                          family = "Lee"),
                   person(given = "Ben",
                          family = "Goodrich"),
                   person(given = "Michael",
                          family = "Betancourt"),
                   person(given = "Marcus",
                          family = "Brubaker"),
                   person(given = "Jiqiang",
                          family = "Guo"),
                   person(given = "Peter",
                          family = "Li"),
                   person(given = "Allen",
                          family = "Riddell")),

  journal      = "Journal of Statistical Software",
  year         = "2016",
  volume       = "75",
  number       = "8",
  pages        = "1--30",
  doi          = "10.18637/jss.v075.i08",

  header       = "To cite rstan in publications use:",
  textVersion  =
  paste("Bob Carpenter, Andrew Gelman, Matthew D. Hoffman, Daniel Lee, Ben Goodrich, Michael Betancourt, Marcus Brubaker, Jiqiang Guo, Peter Li, Allen Riddell (2016).",
        "Stan: A Probabilistic Programming Language.",
        "Journal of Statistical Software, 75(8), 1-30.",
        "doi:10.18637/jss.v075.i08")

)
