STANHEADERS_SRC = `"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" --vanilla -e "cat(system.file('include', 'src', package = 'StanHeaders'))"`
STANHEADERS_CVODE = `"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" --vanilla -e "cat(system.file('include', 'cvode', package = 'StanHeaders'))"`

PKG_CPPFLAGS = -isystem"../inst/include" -isystem"../inst/include/boost_not_in_BH" -isystem"$(STANHEADERS_SRC)" -isystem"$(STANHEADERS_CVODE)" -DBOOST_RESULT_OF_USE_TR1 -DBOOST_NO_DECLTYPE -DBOOST_DISABLE_ASSERTS
SHLIB_LDFLAGS = $(SHLIB_CXXLDFLAGS) 
SHLIB_LD = $(SHLIB_CXXLD)
