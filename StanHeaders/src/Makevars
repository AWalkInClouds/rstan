SOURCES = $(SUNDIALS_CVODES) $(SUNDIALS_IDAS) $(SUNDIALS_NVECSERIAL)
OBJECTS = $(SOURCES:.c=.o)

static: $(OBJECTS)
	@mkdir -p ../lib
	$(AR) -rs ../lib/libStanHeaders.a $(OBJECTS)
				
clean:
	rm -rf ../lib
	rm $(OBJECTS)

